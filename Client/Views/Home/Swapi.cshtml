                                    <label class="form-check-label" for="gender-l">
                                        Laki-laki
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="gender-update" id="gender-p" checked />
                                    <label class="form-check-label" for="gender-p">
                                        Perempuan
                                    </label>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <label class="form-label">Email:</label>
                                <input type="email" class="form-control" id="email-update" name="email" required />
                            </div>
                            <div class="col-md-12">
                                <label class="form-label">Phone Number :</label>
                                <input type="tel" class="form-control" id="phoneNumber-update" name="phoneNumber" pattern="(\+62|62|0)8|[1-9][0-9]{6,9}$" required />
                            </div>
                                                       
                        </div>
                    </div>
                    <div class="col-12">
                        <button class="btn btn-primary" type="submit" >Update Data</button>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>

